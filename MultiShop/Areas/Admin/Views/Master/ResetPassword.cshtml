<h2>Đổi mật khẩu</h2>

@using (Html.BeginForm("ResetPassword", "Master", FormMethod.Post, new { @class = "form-horizontal", role = "form", id="form-reset-password"}))
{

    <h4>Thay đổi mật khẩu tài khoản @ViewBag.UserName.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

   
    <div class="form-group">
        <label for="Password" class="control-label col-md-2">Mật khẩu mới</label>
        <div class="col-md-6">
            @Html.Password("NewPassword", new { required = "required", @class = "form-control" })
        </div>

    </div>
    <div class="form-group">
        <label for="Password" class="control-label col-md-2">Xác nhận mật khẩu</label>
        <div class="col-md-6">
            @Html.Password("ConfirmPassword", new { required = "required", @class = "form-control" })
        </div>

    </div>
    <div class="col-md-offset-2">
        <button type="submit">Đổi mật khẩu</button>
    </div>

}

@section Scripts {
   

<script type="text/javascript">
    $(document).ready(function () {



        $('#form-reset-password').bootstrapValidator({
            // live: 'disabled',
           // excluded: [':disabled', ':hidden', ':not(:visible)'],
            message: 'This value is not valid',
            //submitButtons: 'button[id="validateBtn"]',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh',

            },
            fields: {
                Password: {

                    validators: {
                        notEmpty: {
                            message: 'The password is required and cannot be empty'
                        },

                        stringLength: {
                            min: 6,
                            max: 30,
                            message: 'The Password must be more than 6 and less than 30 characters long'
                        },
                        identical: {
                            field: 'confirmPassword',
                            message: 'The password and its confirm are not the same'
                        },


                    }
                },
                ConfirmedPassword: {

                    validators: {
                        notEmpty: {
                            message: 'The Name Field Name is required and cannot be empty'
                        },
                        identical: {
                            field: 'Password',
                            message: 'The password and its confirm are not the same'
                        },


                    }
                },


                

            }
        });

