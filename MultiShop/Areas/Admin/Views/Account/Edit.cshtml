@model Customer
@{
    ViewBag.Title = "Thông tin tài khoản";
}

<h3>@ViewBag.Title.</h3>

@using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Sửa thông tin</h4>
    <hr />
    @Html.ValidationSummary()
    @Html.HiddenFor(m => m.Password)
    <div class="form-group">
        <label class="col-md-3 control-label">Tài khoản</label>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @readonly = "true" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-3 control-label">Tên tài khoản</label>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.Fullname, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Số điện thoại</label>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Email</label>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" class="btn btn-default" value="Cập Nhật" />
        </div>
    </div>
}

