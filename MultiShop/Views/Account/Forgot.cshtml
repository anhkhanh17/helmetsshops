@{
    ViewBag.Title = "Quên Mật Khẩu";
}

<h3>Quên Mật Khẩu?</h3>

@using (Html.BeginForm("Forgot", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary()
    <div class="form-group">
        <label class="col-md-3 control-label">Tên đăng nhập</label>
        <div class="col-md-5">
            @Html.TextBox("UserName", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Email</label>
        <div class="col-md-5">
            @Html.TextBox("Email", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" class="btn btn-default" value="Lấy Lại Mật Khẩu" />
        </div>
    </div>
}