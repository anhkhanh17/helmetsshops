@model Customer
@{
    ViewBag.Title = "Khôi Phục Mật Khẩu";
}

<h3>Khôi Phục Mật khẩu</h3>

@using (Html.BeginForm("Reset", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary()
    <div class="form-group">
        <label class="col-md-2 control-label">Tên đăng nhập</label>
        <div class="col-md-10">
            @Html.TextBox("UserName", new { @class = "form-control" , disabled = "disabled",  @readonly = "true" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Mã xác thực</label>
        <div class="col-md-10">
            @Html.TextBox("TokenCode", new { required = "required" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Mật khẩu mới</label>
        <div class="col-md-10">
            @Html.Password("NewPassword", new { required = "required" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Nhập lại mật khẩu</label>
        <div class="col-md-10">
            @Html.Password("ConfirmPassword", new { required = "required" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Khôi Phục Mật Khẩu" />
        </div>
    </div>
}