@model Order

@{
                /**/

                ViewBag.Title = "Đặt Hàng";
}

<h3>Thông Tin Khách Hàng</h3>

@using (Html.BeginForm("Purchase", "Order"))
{
    @Html.Partial("Partials/_ErrorValidate")
    <div class="form-horizontal">

        <div class="form-group">
            <label class="control-label col-md-2">Tên khách hàng</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CustomerId, new { @class = "form-control", @readonly = "true" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày đặt hàng</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OrderDate, new { @class = "form-control", @readonly = "true" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày giao hàng</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.RequireDate, new { @class = "form-control", @readonly = "true" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên người nhận</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Receiver, new { @class = "form-control", required = "required" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Số điện thoại</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Phone, null, new { @class = "form-control", required = "required" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Địa chỉ</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", required = "required" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tổng tiền</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", @readonly = "true" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mô tả</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "5" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đặt Hàng" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<h3>Danh Sách Sản Phẩm Đã Chọn</h3>
@Html.Action("OrderDetail","Cart")
   